@model KnowledgeHubPortal.Domain.Entities.Category
<div class="container mt-5">
    <h2 class="mb-4">Edit Category</h2>




    <form asp-action="Edit" asp-controller="Categories" method="post">

        @Html.ValidationSummary()
        <div class="mb-3">
            <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId" />
            <label for="categoryName" class="form-label">Category Name</label>
            <input type="text" class="form-control" id="Name" asp-for="Name" value="@Model.Name"   placeholder="Enter category name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" asp-for="Description" value="@Model.Description"   rows="4" placeholder="Enter description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" asp-controller="Categories" class="btn btn-outline-info">Cancel</a>
    </form>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

