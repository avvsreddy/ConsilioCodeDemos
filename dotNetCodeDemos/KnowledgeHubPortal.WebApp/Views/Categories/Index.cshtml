@model List<KnowledgeHubPortal.Domain.Entities.Category> 


<a class="btn btn-primary" asp-action="Add" asp-controller="Categories" >Create New Category</a>
<table class="table">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td><a asp-action="Edit" asp-controller="Categories" asp-route-id="@category.CategoryId" class="btn btn-info">Edit</a></td>
            </tr>
        }
    </tbody>
</table>


